<%= notice %>

<h1>BookLog</h1>

<%= search_form_for(@q) do |f| %>
  <%= f.label :name_cont, "名称" %>
  <%= f.search_field :name_cont %>
  <%= f.submit   %>
<% end %>

<table>
  <tr>
    <th>書籍名</th>
    <th>著者名</th>
    <th>メモ・感想</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.memo %></td>
      <td><%= link_to "編集", edit_book_path(book) %></td>
    </tr>
  <% end %>
</table>

<%= link_to "新しい書籍を登録する", new_book_path %>